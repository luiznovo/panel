         const fileName = document.getElementById('newFileNameInput').value.trim();
         if (fileName) {
            const encodedFileName = encodeURIComponent(fileName);
            const createUrl = `/instance/<%= req.params.id %>/files/create/${encodedFileName}<%= query %>`;
